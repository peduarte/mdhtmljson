#!/usr/bin/env node
var mdhtmljson = require('../src');
var program = require('commander');

program
  .version(require('../package.json').version)
  .usage('<entry file> [options]')
  .option(
    '-o, --output <output file>',
    'write output to this file â€“ include path (.json file extension not needed)'
  )
  .parse(process.argv);

// If not paramters are passes
// show help and bye bye
if (program.args.length == 0) {
  program.help();
}

var mdUrl = program.args[0];
var output = program.output || false;

mdhtmljson(mdUrl, output);

